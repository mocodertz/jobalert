<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginBottom="4dp">

    <View
        android:id="@+id/bullet_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/small_dot" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/bullet_icon"
        android:text="To coordinate evaluation of internal controls and risk management systems and procedures and recommend actions for improvement."/>
</RelativeLayout>