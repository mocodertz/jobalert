<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/document_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pdf_custom"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/document_icon"
            android:layout_centerVertical="true">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/document_file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Experienced Application Letter"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/modified_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/document_file_name"
                android:text="Modified: 6"/>
        </RelativeLayout>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/file_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>